# Next.js Environment Variables

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true

# Application Settings
NEXT_PUBLIC_APP_NAME=Exam Grading System


# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_change_this

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Backend API - Note different variables for client and server
NEXT_PUBLIC_API_URL=http://localhost:3000/api/  # Used by client-side code
API_URL=http://localhost:3000/api/              # Used by server-side code